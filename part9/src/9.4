import express from 'express';

const app = express();

// Route for the root URL
app.get('/', (_req, res) => {
  res.send('Welcome to the Home Page!');
});

// Existing hello endpoint
app.get('/hello', (_req, res) => {
  res.send('Hello Full Stack!');
});

const PORT = 3000;

app.listen(PORT, () => {
  console.log(`Server running on port ${PORT}`);
});

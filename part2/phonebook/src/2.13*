// services/persons.js

import axios from 'axios';
const baseUrl = 'http://localhost:3003/persons'; // Replace with your backend URL

// Function to fetch all persons
const getAll = () => {
  const request = axios.get(baseUrl);
  return request.then(response => response.data);
};

// Function to create a new person entry
const create = newPerson => {
  const request = axios.post(baseUrl, newPerson);
  return request.then(response => response.data);
};

// Function to delete a person entry by id
const remove = id => {
  const request = axios.delete(`${baseUrl}/${id}`);
  return request.then(response => response.data);
};

// Export the functions to be used by other parts of the application
export default { getAll, create, remove };

import { useState } from 'react'; ///The useState hook is used to add state variables to functional components in React.

const App = () => {
  const [persons, setPersons] = useState([{ name: 'Arto Hellas' }]);
  const [newName, setNewName] = useState('');

  const handleNameChange = (event) => { ///Handling Name Input Changes
    setNewName(event.target.value);///updates the newName state to the current value of the input field (event.target.value)
  };

  const addPerson = (event) => {
    event.preventDefault(); // *Prevent form submission from refreshing the page
    const personObject = {
      name: newName
    };
    setPersons(persons.concat(personObject)); //*Concatenates new person object to persons array
    setNewName(''); // resets the newName state to an empty string, effectively clearing the input field after adding a person.
  };

  return (
    <div>
      <h2>Phonebook</h2>
      <form onSubmit={addPerson}> {/*  a form that calls addPerson function on submission. */}
        <div>
          name: <input value={newName} onChange={handleNameChange}  />   {/* an input field bound to newName state, with onChange event handling in handleNameChange. */}
        </div> 
        <div>
          <button type="submit">add</button> {/*  a submit button inside the form. */}
        </div>
      </form>
      <h2>Numbers</h2>
      <ul>
        {persons.map(person => ( ///<ul> renders a list of <li> elements using persons.map()
          <li key={person.name}>{person.name}</li>
        ))}
      </ul>
      {/* Debugging purposes */}
      <div>debug: {newName}</div>
    </div>
  );
};

export default App;





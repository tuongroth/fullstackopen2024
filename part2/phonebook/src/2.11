import React, { useState, useEffect } from 'react';
import axios from 'axios';

const App = () => {
  // State to hold persons data fetched from the server
  const [persons, setPersons] = useState([]);

  // Effect hook to fetch data from the server on component mount
  useEffect(() => {
    // Axios GET request to fetch data from json-server
    axios
      .get('http://localhost:3001/persons')  // Replace URL with your json-server endpoint
      .then(response => {
        setPersons(response.data);  // Update state with fetched data
      })
      .catch(error => {
        console.error('Error fetching data:', error);
      });
  }, []);

  return (
    <div>
      <h1>Phonebook</h1>
      <ul>
        {/* Render each person's name and number from the fetched data */}
        {persons.map(person => (
          <li key={person.id}>
            {person.name} {person.number}
          </li>
        ))}
      </ul>
    </div>
  );
}

export default App;

import React from 'react';

const App = () => {
  const course = {
    id: 1,
    name: 'Half Stack application development',
    parts: [
      {
        name: 'Fundamentals of React',
        exercises: 10,
        id: 1
      },
      {
        name: 'Using props to pass data',
        exercises: 7,
        id: 2
      },
      {
        name: 'State of a component',
        exercises: 14,
        id: 3
      }
    ]
  };

  return (
    <div>
      <Course course={course} />
    </div>
  );
};

const Course = ({ course }) => ( ///Course use the Header and Content components to render the course name and its parts.
  <div>
    <Header name={course.name} />
    <Content parts={course.parts} />
  </div>
);

const Header = ({ name }) => {///The Header component will render the course name.
  return <h1>{name}</h1>;
};

const Content = ({ parts }) => { ///Content component will map over the parts of the course and render each part using the Part component.
  return (
    <div>
      {parts.map(part => (
        <Part key={part.id} part={part} />
      ))}
    </div>
  );
};

const Part = ({ part }) => { ///The Part component will render the name and number of exercises for each part.
  return (
    <p>
      {part.name} {part.exercises}
    </p>
  );
};

export default App;

import React from 'react';

// Header component
const Header = ({ name }) => {
  return <h1>{name}</h1>;
};

// Part component*
const Part = ({ part }) => {
  return (
    <div>
      <p>{part.name}</p>
      <p>{part.exercises}</p>
    </div>
  );
};

// Content component
const Content = ({ parts }) => {
  return (
    <div>
      {parts.map((part) => (
        <Part key={part.id} part={part} />
      ))}
    </div>
  );
};

// Course component ///rendering the course name and its parts*
const Course = ({ course }) => {
  return (
    <div>
      <Header name={course.name} />
      <Content parts={course.parts} />
    </div>
  );
};

// Total component to calculate and display total exercises using reduce
const Total = ({ parts }) => {
  const total = parts.reduce((sum, part) => sum + part.exercises, 0);
  return <p>Total of {total} exercises</p>;
};

export default Course;
